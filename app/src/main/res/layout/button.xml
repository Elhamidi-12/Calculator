<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="4"
        app:rowCount="6"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btnClean"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:background="@drawable/btnstyle"
            android:text="C"
            android:textColor="@color/txt"
            android:textSize="25sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/btn9aws"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/btnstyle"
            android:layout_margin="2dp"
            android:text="()"
            android:textColor="@color/txt"
            android:textSize="25dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/btnRest"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/btnstyle"
            android:layout_margin="2dp"
            android:text="%"
            android:textColor="@color/txt"
            android:textSize="25sp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/btnDivi"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/btnstyle"
            android:layout_margin="2dp"
            android:text="/"
            android:textColor="@color/txt"
            android:textSize="25sp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/btnstyle"
            android:layout_margin="2dp"
            android:text="7"
            android:textColor="@color/txt"
            android:textSize="25sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/btnstyle"
            android:layout_margin="2dp"
            android:text="8"
            android:textColor="@color/txt"
            android:textSize="25dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/btnstyle"
            android:layout_margin="2dp"
            android:text="9"
            android:textColor="@color/txt"
            android:textSize="25sp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/btnmulti"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/btnstyle"
            android:layout_margin="2dp"
            android:text="*"
            android:textColor="@color/txt"
            android:textSize="25sp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/btnstyle"
            android:layout_margin="2dp"
            android:text="4"
            android:textColor="@color/txt"
            android:textSize="25sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/btnstyle"
            android:layout_margin="2dp"
            android:text="5"
            android:textColor="@color/txt"
            android:textSize="25dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/btnstyle"
            android:layout_margin="2dp"
            android:text="6"
            android:textColor="@color/txt"
            android:textSize="25sp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/btnSub"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/btnstyle"
            android:layout_margin="2dp"
            android:text="-"
            android:textColor="@color/txt"
            android:textSize="25sp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/btnstyle"
            android:layout_margin="2dp"
            android:text="1"
            android:textColor="@color/txt"
            android:textSize="25sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/btnstyle"
            android:layout_margin="2dp"
            android:text="2"
            android:textColor="@color/txt"
            android:textSize="25dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/btnstyle"
            android:layout_margin="2dp"
            android:text="3"
            android:textColor="@color/txt"
            android:textSize="25sp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/btnstyle"
            android:layout_margin="2dp"
            android:text="+"
            android:textColor="@color/txt"
            android:textSize="25sp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/btnstyle"
            android:layout_margin="2dp"
            android:text="0"
            android:textColor="@color/txt"
            android:textSize="25sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/btnPoint"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/btnstyle"
            android:layout_margin="2dp"
            android:text="."
            android:textColor="@color/txt"
            android:textSize="25sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/btnstyle"
            android:layout_margin="2dp"
            android:backgroundTint="@color/bcg"
            android:text="="
            android:textColor="@color/txt"
            android:textSize="25sp"
            app:layout_columnSpan="2"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="4" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>